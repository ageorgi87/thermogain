// Section DHW (Domestic Hot Water / Eau Chaude Sanitaire)
// Stores information about the separate hot water system
// Only used when dhwIntegrated = false in ProjectCurrentHeating

model ProjectDhw {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Type of DHW system
  dhwSystemType String // "Ballon électrique", "Thermodynamique", "Chauffe-eau gaz", "Chauffe-eau solaire", "Autre"

  // Consumption (user-provided or estimated)
  dhwConsumptionKnown Boolean // true = manual input, false = auto estimation
  dhwConsumptionKwh Float?  // Annual DHW consumption (kWh/year) - if dhwConsumptionKnown = true

  // Costs
  dhwEnergyPricePerKwh Float // Energy price (€/kWh)
  dhwAnnualMaintenance Float @default(0) // Annual maintenance cost (€/year)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
