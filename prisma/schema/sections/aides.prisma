// Section 5: Financial Aid
// Stores available financial aid and subsidies

model ProjectFinancialAid {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Eligibility criteria (filled in calculator)
  housingType            String?
  referenceTaxIncome     Int?
  isPrimaryResidence     Boolean?
  isCompleteReplacement  Boolean?

  // Aid amounts
  maPrimeRenov Float
  cee          Float
  otherAid     Float
  totalAid     Float // Automatically calculated (sum of aids)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
