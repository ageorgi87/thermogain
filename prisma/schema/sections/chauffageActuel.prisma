// Section 2: Current Heating System
// Stores information about the existing heating system and energy consumption

model ProjectCurrentHeating {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  heatingType          String
  installationAge      Int
  installationCondition String

  // DHW (Domestic Hot Water) integration
  // true = DHW integrated in heating system (mixed boiler), false = separate DHW system
  // Only relevant if future heat pump will manage DHW (with_ecs_management = true)
  dhwIntegrated Boolean?

  // Consumption data - conditional based on heatingType
  fuelConsumptionLiters    Float?
  fuelPricePerLiter        Float?
  gasConsumptionKwh        Float?
  gasPricePerKwh           Float?
  lpgConsumptionKg         Float?
  lpgPricePerKg            Float?
  pelletsConsumptionKg     Float?
  pelletsPricePerKg        Float?
  woodConsumptionSteres    Float?
  woodPricePerStere        Float?
  electricityConsumptionKwh Float?
  electricityPricePerKwh   Float?
  currentCop               Float?
  heatPumpConsumptionKwh   Float?

  // Fixed costs and subscriptions (November 2024)
  // Annual gas subscription (€/year) - only for heatingType = "gas"
  gasSubscription Float?

  // Annual maintenance cost of current system (€/year)
  annualMaintenance Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
