// Section 1: Housing Information
// Stores basic property information collected in step 1 of the wizard

model ProjectHousing {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  postalCode        String
  constructionYear  Int
  livingArea        Int     // mÂ² - Living area (required for energy needs calculation)
  numberOfOccupants Int
  dpeRating         String? // DPE class (A-G), required for API Aides

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
