generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  company       String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  heatingProjects HeatingProject[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Project Management Models
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?

  // Example form fields
  textField      String?
  numberField    Float?
  radioChoice    String?
  checkboxes     String[] // Array of selected options

  // Client info
  clientName     String?
  clientCompany  String?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Heating Project - PAC Calculator
model HeatingProject {
  id          String   @id @default(cuid())

  // Logement
  departement          String
  annee_construction   Int
  surface_habitable    Float
  nombre_occupants     Int
  isolation_murs       Boolean
  isolation_combles    Boolean
  double_vitrage       Boolean

  // Chauffage actuel
  type_chauffage_actuel String
  age_installation      Int
  etat_installation     String

  // Consommation
  type_energie          String
  conso_fioul_litres    Float?
  prix_fioul_litre      Float?
  conso_gaz_kwh         Float?
  prix_gaz_kwh          Float?
  conso_gpl_kg          Float?
  prix_gpl_kg           Float?
  conso_pellets_kg      Float?
  prix_pellets_kg       Float?
  conso_bois_steres     Float?
  prix_bois_stere       Float?
  conso_elec_kwh        Float?
  prix_elec_kwh         Float?
  cop_actuel            Float?
  conso_pac_kwh         Float?

  // Projet PAC
  type_pac              String
  puissance_pac_kw      Float
  cop_estime            Float
  temperature_depart    Int
  emetteurs             String
  ballon_ecs            Boolean
  volume_ballon         Int?

  // Coûts
  cout_pac              Float
  cout_installation     Float
  cout_travaux_annexes  Float?
  cout_total            Float

  // Aides
  ma_prime_renov        Float?
  cee                   Float?
  autres_aides          Float?
  total_aides           Float
  reste_a_charge        Float

  // Financement
  mode_financement      String
  apport_personnel      Float?
  montant_credit        Float?
  taux_interet          Float?
  duree_credit_mois     Int?
  mensualite            Float?

  // Évolutions
  evolution_prix_energie      Float
  evolution_prix_electricite  Float
  duree_etude_annees          Int

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
